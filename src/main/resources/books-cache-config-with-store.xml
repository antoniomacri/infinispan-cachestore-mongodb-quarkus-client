<distributed-cache>
    <encoding media-type="application/x-protostream"/>
    <persistence passivation="false">
        <mongodb-store xmlns="urn:infinispan:config:mongodb-store:15.0">
            <connection uri="mongodb://${env.MONGODB_HOST_PORT}/mydb"
                        collection="books"/>
        </mongodb-store>
    </persistence>
</distributed-cache>
