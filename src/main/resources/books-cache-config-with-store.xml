<distributed-cache>
    <encoding media-type="application/x-protostream"/>
    <persistence passivation="false">
        <mongodbStore xmlns="urn:infinispan:config:mongodb-store:14.0">
            <connection uri="mongodb://${env.MONGODB_HOST_PORT}/mydb"
                        collection="books"/>
        </mongodbStore>
    </persistence>
</distributed-cache>
